#!/usr/bin/env python

import typing
import random

def gen_line(c: str):
    return c * 64 + '\n'

def write_to_file(path: str, nlines: int, uniform: bool):
    n = nlines // 2
    lines = [gen_line('a') for i in range(n)] + [gen_line('b') for i in range(n)]
    if not uniform:
        random.shuffle(lines)

    with open(path, 'w') as f:
        f.writelines(lines)

NLINES = 2048
write_to_file('unif.txt', NLINES, uniform=True)
write_to_file('shuf.txt', NLINES, uniform=False)

    
